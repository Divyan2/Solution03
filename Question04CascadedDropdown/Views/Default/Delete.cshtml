@model Stage03Library.Models.Q4models.Individual

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<style>
    body {
        text-align: center;
        background-color: #f4f4f4;
    }

    .container {
        width: 30%;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2, h3 {
        color: #4CAF50;
    }

    .dl-horizontal dt {
        width: 120px;
    }

    .dl-horizontal dd {
        margin-left: 130px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: 1px solid #dc3545;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-default {
        background-color: #007BFF;
        color: #fff;
        border: 1px solid #007BFF;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    .btn {
        text-decoration: none;
    }
</style>

<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Individual</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DOB)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DOB)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country.CountryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country.CountryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State.StateName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State.StateName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City.CityName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City.CityName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
