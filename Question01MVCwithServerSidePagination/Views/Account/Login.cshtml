@model Question01MVCwithServerSidePagination.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<style>
    /* Add your custom styles here */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .container {
        max-width: 400px;
        margin: 0 auto;
        margin-top: 50px;
        background-color: #fff; /* Container background color */
        border-radius: 8px; /* Container border radius */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Container box shadow */
        padding: 20px;
        text-align: center;
    }

    h2 {
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #428bca;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #428bca;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
    }

    .btn-tertiary {
        background-color: #428bca;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover, .btn-secondary:hover, .btn-tertiary:hover, .btn-recover-password:hover {
            opacity: 0.8;
        }

    .text-danger {
        color: #a94442;
    }

    /* Center the h3 and h2 tags */
    h1, h2 {
        text-align: center;
    }

    /* Style the "Recover Password" link as a button */
    .btn-recover-password {
        background-color: #428bca;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        border-radius: 4px;
        display: inline-block;
        margin-top: 10px;
    }
</style>
<div class="container">
    <h2>Login</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <button type="submit" class="btn btn-primary">Login</button>
        <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">Register</a>
        <a href="@Url.Action("RecoverPassword", "Account")" class="btn btn-recover-password">Recover Password</a>
    }
</div>

